  name: app1
 Labelss: 
    app: appl
Spec: 
  replicas: 3
  Selector: 
    matchLabels:
      app: appl
  Template: 
    Metadata: 
      Labels: 
        app: appl
    Spec: 
      Containers: 
        - name: app1
          image: kiran2361993/cube game:v2  # Removed space after `:` 
          ports:
            - containerPort: 80
         readiness probe: 
          HTTP get 
              path: /index.html
              port: 80
            initialDelaySeconds: 5
         period secondsnds: 10 




